
font-size = 18

# 터미널 닫을 때 프로세스 실행 중 확인 메시지 비활성화
confirm-close-surface = false


# 패널 간 이동 (alt (option) + 방향키)
keybind = cmd+left=goto_split:left
keybind = cmd+right=goto_split:right
keybind = cmd+up=goto_split:top
keybind = cmd+down=goto_split:bottom

# 위쪽으로 패널 분할 (Shift + Alt + Up)
keybind = shift+cmd+up=new_split:up

# 아래쪽으로 패널 분할 (Shift + Alt + Down)
keybind = shift+cmd+down=new_split:down

# 왼쪽으로 패널 분할 (Shift + Alt + Left)
keybind = shift+cmd+left=new_split:left

# 오른쪽으로 패널 분할 (Shift + Alt + Right)
keybind = shift+cmd+right=new_split:right

